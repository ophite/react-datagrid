.react-datagrid

    .z-column-content
        overflow visible

    &.z-cell-ellipsis
        .z-row .z-cell .z-content
            text-overflow ellipsis
            white-space nowrap
            overflow hidden

    .z-row
        border-bottom 1px solid #f2f2f2
        height auto !important

        &.z-over
        &.z-over.z-odd
            background $datagrid-row-over-background
        &.z-selected
        &.z-selected.z-odd
            background $datagrid-row-selected-background
        .z-cell
            datagrid-cell()
            padding 18px

    .z-group-row
        &.z-over
        &.z-over.z-odd
            background $datagrid-group-row-over-background

    .z-group-cell
        flex 1
    .z-group-row
        background $datagrid-group-row-background